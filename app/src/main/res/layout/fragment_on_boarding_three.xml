<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_black"
    android:weightSum="100"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:src="@drawable/onboarding3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:layout_weight="10"
            android:src="@drawable/forward_direction"
            android:contentDescription="Forward" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="80"
            android:src="@drawable/onboarding_slider_three" />

        <ImageButton
            android:background="@color/bg_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:src="@drawable/award_direction"
            android:contentDescription="Award"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="20" />

    <Button
        android:layout_weight="0"
        android:id="@+id/btnendonboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/get_started_bg"
        android:text="@string/finish_onboarding"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="20"
        android:src="@drawable/logo_text" />

</LinearLayout>