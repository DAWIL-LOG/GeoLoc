<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/onboarding_3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToOutline="true"
        android:background="@drawable/bg_app"
>
    <View
            android:id="@+id/logo_text_3"
            android:layout_width="333dp"
            android:layout_height="101dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp"
            android:background="@drawable/logo_text"
    />


    <View
        android:id="@+id/onboarding_fond"
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/onboarding_bg" />

    <ImageView android:id="@+id/onboarding1"
               android:layout_width="301dp"
               android:layout_height="225dp"
               android:layout_centerHorizontal="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="127dp"
               android:background="@drawable/onboarding3"
    />

    <Button
        android:id="@+id/btnendonboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/get_started_bg"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="100dp"
        android:textAlignment="center"
        android:text="@string/finish_onboarding" />

</RelativeLayout>