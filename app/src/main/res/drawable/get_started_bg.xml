<?xml version="1.0" encoding="utf-8"?>
<layer-list android:opacity="opaque" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="start"
        android:right="25dp">
        <shape android:shape="rectangle">
            <solid android:color="#02BAF4"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:width="50dp"
            android:height="50dp"
        android:gravity="end|center">
        <shape android:shape="oval">
            <stroke android:width="4dp"
                android:color="#FFFFFF" />
            <solid android:color="#02BAF4"/>
        </shape>
    </item>
    <item android:width="50dp"
        android:height="50dp"
        android:gravity="end|center"
        android:drawable="@drawable/chevron_right"
        />
</layer-list>

